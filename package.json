{
  "name": "bible-reading-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build && npx gh-pages -d dist",
    "remotion:studio": "remotion studio src/remotion/index.js",
    "remotion:render": "remotion render src/remotion/index.js BibleVerseVideo out/video.mp4",
    "remotion:render:portrait": "remotion render src/remotion/index.js BibleVerseVideo out/video-portrait.mp4",
    "remotion:render:landscape": "remotion render src/remotion/index.js BibleVerseVideoLandscape out/video-landscape.mp4",
    "remotion:render:square": "remotion render src/remotion/index.js BibleVerseVideoSquare out/video-square.mp4",
    "remotion:demo:intro": "remotion render src/remotion/index.js AppIntroDemo out/demo-intro.mp4",
    "remotion:demo:onboarding": "remotion render src/remotion/index.js OnboardingDemo out/demo-onboarding.mp4",
    "remotion:demo:dashboard": "remotion render src/remotion/index.js DashboardDemo out/demo-dashboard.mp4",
    "remotion:demo:all": "npm run remotion:demo:intro && npm run remotion:demo:onboarding && npm run remotion:demo:dashboard"
  },
  "dependencies": {
    "@remotion/cli": "^4.0.409",
    "@remotion/player": "^4.0.409",
    "firebase": "^10.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "remotion": "^4.0.409"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "vite": "^4.5.0",
    "vite-plugin-pwa": "^1.2.0"
  }
}
